{erl_opts, [debug_info, warn_missing_spec, warn_missing_spec_all]}.

{deps, []}.

{profiles, [
    {test, [
        {deps, [
            {proper, "1.4.0"}
        ]},
        {plugins, [
            {rebar3_codecov, "0.2.0"}
        ]},
        {port_env, [
            {"CXXFLAGS", "$CXXFLAGS -O3 -std=c++11 -g -Wall -Wextra -fPIC --coverage"},
            {"LDFLAGS", "$LDFLAGS --coverage"}
        ]},
        {cover_enabled, true},
        {cover_export_enabled, true}
    ]}
]}.

{plugins,
 [
  pc,
  rebar3_hex,
  {gradualizer, {git, "git://github.com/josefs/Gradualizer.git", {branch, "master"}}}
 ]}.

% Interrupt compilation, if the artifact is not found
{artifacts, ["priv/exml_nif.so"]}.

{port_specs, [
    {
        % Any arch
        ".*",
        % Create library
        "priv/exml_nif.so",
        % From files
        ["c_src/*.cpp"],
        % Using options
        [{env, [{"CXXFLAGS", "$CXXFLAGS -O3 -std=c++11"}]}]
    }
]}.

{provider_hooks, [
    {post, [
        {compile, {pc, compile}},
        {clean, {pc, clean}}
     ]}
]}.
